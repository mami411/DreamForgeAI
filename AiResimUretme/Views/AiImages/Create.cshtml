@model AiResimUretme.Models.AiImage

@{
    ViewData["Title"] = "Yeni Oluştur";
}

<div class="d-flex align-items-center justify-content-center" style="min-height: 80vh;">

    <div class="container">
        <div class="row justify-content-center">

            <div class="col-lg-5 mb-5 mb-lg-0 d-flex flex-column justify-content-center text-center text-lg-start">
                <h1 class="display-3 fw-bold text-white mb-3">
                    Hayal Et. <br />
                    <span class="text-info">Yapay Zeka</span> Çizsin.
                </h1>
                <p class="lead text-secondary mb-4">
                    Dreanforge Ai , yazdığın kelimeleri saniyeler içinde büyüleyici sanat eserlerine dönüştürür.
                </p>

                <div class="d-flex justify-content-center justify-content-lg-start gap-4 text-muted">
                    <div class="text-center">
                        <i class="bi bi-lightning-charge-fill fs-3 text-warning"></i>
                        <div class="small mt-1">Hızlı</div>
                    </div>
                    <div class="text-center">
                        <i class="bi bi-shield-lock-fill fs-3 text-success"></i>
                        <div class="small mt-1">Güvenli</div>
                    </div>
                    <div class="text-center">
                        <i class="bi bi-palette-fill fs-3 text-danger"></i>
                        <div class="small mt-1">Sanatsal</div>
                    </div>
                </div>
            </div>

            <div class="col-lg-6 offset-lg-1">
                <div class="glass-card p-4 p-md-5">
                    <h3 class="text-center mb-4"><i class="bi bi-stars text-warning"></i> Sihri Başlat</h3>

                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group mb-4">
                            <label asp-for="Prompt" class="control-label mb-2 text-info small fw-bold">PROMPT (İNGİLİZCE ÖNERİLİR)</label>
                            <textarea asp-for="Prompt" id="promptArea" class="form-control" rows="5"
                                      placeholder="Örn: A futuristic city floating in the sky, cyberpunk style, neon lights..."></textarea>
                            <span asp-validation-for="Prompt" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <small class="text-muted d-block mb-2">Hızlı Başlangıç:</small>
                            <div class="d-flex flex-wrap">
                                <span class="prompt-chip" onclick="addPrompt('Cyberpunk city')">🏙️ Cyberpunk City</span>
                                <span class="prompt-chip" onclick="addPrompt('Cute cat in space')">🐱 Cat in Space</span>
                                <span class="prompt-chip" onclick="addPrompt('Oil painting of a forest')">🌲 Forest Art</span>
                                <span class="prompt-chip" onclick="addPrompt('Abstract geometric shapes')">🔺 Abstract</span>
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-glow btn-lg py-3">
                                <i class="bi bi-magic"></i> Resmi Oluştur
                            </button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>

        function addPrompt(text) {
            var textArea = document.getElementById("promptArea");
            textArea.value = text;
        }
    </script>
}